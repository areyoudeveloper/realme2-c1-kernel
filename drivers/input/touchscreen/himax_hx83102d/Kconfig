config TOUCHSCREEN_HIMAX_INCELL
	bool "himax host download SPI driver"
	default y
	help
	  Say Y here if you have a himax no flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.

config TOUCHSCREEN_HIMAX_IC_HX83102
	bool "himax host download SPI driver"
	default y
	help
	  Say Y here if you have a himax no flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.

config TOUCHSCREEN_HIMAX_COMMON
	bool "himax host download SPI driver"
	default y
	help
	  Say Y here if you have a himax no flash touchscreen connected
	  to your system by SPI bus.
	  If unsure, say N.

config TOUCHSCREEN_HIMAX_INSPECT
	bool "himax host download SPI driver"
	default y
	help
	  Say Y here if you have a himaxx no flash touchscreen connected
	  to your system by SPI bus.
